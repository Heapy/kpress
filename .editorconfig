# http://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[{*.json,*.xml,*.yml,*.yaml,*.html,*.ftl,*.js,*.ts,*.tsx,*.conf,*.ddl,*.sql}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true


[{*.java,*.kt,*.gradle.kts}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
